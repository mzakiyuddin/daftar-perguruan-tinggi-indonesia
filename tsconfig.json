{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ES2015", "DOM"],
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"]
    },
    "types": ["vitest/globals"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
